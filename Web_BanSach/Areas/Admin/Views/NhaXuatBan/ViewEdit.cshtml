@model Web_BanSach.NHAXUATBAN

@{
    ViewBag.Title = "ViewEdit";
    <script src="https://esgoo.net/scripts/jquery.js"></script>

}
<style>
    .edit-container {
        max-width: 550px;
        margin: 40px auto;
        padding: 0 20px;
    }

    /* Card chính */
    .edit-card {
        background: linear-gradient(145deg, #1e293b, #0f172a);
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.4);
        border: 1px solid #334155;
        width: 400px;
    }

    /* Header */
    .edit-header {
        background: linear-gradient(135deg, #3b82f6, #1d4ed8);
        padding: 30px;
        text-align: center;
    }

    .edit-icon {
        width: 70px;
        height: 70px;
        background-color: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
    }

        .edit-icon i {
            font-size: 28px;
            color: white;
        }

    .edit-header h2 {
        color: white;
        font-size: 22px;
        font-weight: 700;
        margin: 0 0 8px;
    }

    .edit-header p {
        color: rgba(255, 255, 255, 0.85);
        font-size: 14px;
        margin: 0;
    }

    .current-name {
        background-color: rgba(255, 255, 255, 0.2);
        padding: 4px 14px;
        border-radius: 6px;
        font-weight: 600;
    }

    /* Body */
    .edit-body {
        padding: 35px 30px;
    }

    /* Form group */
    .custom-form-group {
        margin-bottom: 25px;
    }

    .custom-label {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #e2e8f0;
        font-size: 14px;
        font-weight: 600;
        margin-bottom: 10px;
    }

        .custom-label i {
            color: #3b82f6;
            font-size: 16px;
        }

    .required-star {
        color: #ef4444;
        margin-left: 4px;
    }

    .custom-input {
        width: 100%;
        padding: 14px 18px;
        background-color: #0f172a;
        border: 2px solid #334155;
        border-radius: 12px;
        color: #f1f5f9;
        font-size: 15px;
        transition: all 0.3s ease;
        outline: none;
    }

        .custom-input:focus {
            border-color: #3b82f6;
            box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.15);
        }

        .custom-input::placeholder {
            color: #64748b;
        }

    /* Input hint */
    .input-hint {
        display: flex;
        align-items: center;
        gap: 6px;
        margin-top: 8px;
        color: #64748b;
        font-size: 12px;
    }

        .input-hint i {
            font-size: 12px;
            color: #3b82f6;
        }

    /* Validation error */
    .field-validation-error {
        display: flex;
        align-items: center;
        gap: 6px;
        margin-top: 8px;
        color: #ef4444;
        font-size: 13px;
        background-color: rgba(239, 68, 68, 0.1);
        padding: 8px 12px;
        border-radius: 8px;
    }

    .validation-summary-errors {
        background-color: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.3);
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 20px;
        color: #ef4444;
    }

    /* Change indicator */
    .change-indicator {
        background-color: rgba(251, 191, 36, 0.1);
        border: 1px solid rgba(251, 191, 36, 0.3);
        border-radius: 10px;
        padding: 12px 16px;
        margin-top: 20px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .change-indicator i {
            color: #fbbf24;
            font-size: 16px;
        }

        .change-indicator span {
            color: #fbbf24;
            font-size: 13px;
            font-weight: 500;
        }

    /* Footer buttons */
    .edit-footer {
        display: flex;
        gap: 12px;
        padding-top: 10px;
    }

    .btn-cancel {
        flex: 1;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        background-color: #334155;
        color: #e2e8f0;
        padding: 15px 20px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 15px;
        transition: all 0.3s ease;
        border: none;
    }

        .btn-cancel:hover {
            background-color: #475569;
            color: white;
            text-decoration: none;
            transform: translateY(-2px);
        }

    .btn-save {
        flex: 1.5;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        background: linear-gradient(135deg, #10b981, #059669);
        color: white;
        padding: 15px 20px;
        border-radius: 12px;
        font-weight: 600;
        font-size: 15px;
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
        box-shadow: 0 4px 15px rgba(16, 185, 129, 0.4);
    }

        .btn-save:hover {
            background: linear-gradient(135deg, #059669, #047857);
            transform: translateY(-2px);
            box-shadow: 0 6px 20px rgba(16, 185, 129, 0.5);
        }

    /* Responsive */
    @@media (max-width: 500px) {
        .edit-container {
            margin: 30px auto;
        }

        .edit-header {
            padding: 25px 20px;
        }

        .edit-body {
            padding: 25px 20px;
        }

        .edit-footer {
            flex-direction: column-reverse;
        }

        .current-info {
            flex-direction: column;
            text-align: center;
        }
    }
</style>


<section class="edit-container">
    @using (Html.BeginForm("EditSubmit", "NhaXuatBan", new { area = "Admin" }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.MANXB)

        <div class="edit-card">
            <!-- Header -->
            <div class="edit-header">
                <div class="edit-icon">
                    <i class="fa-solid fa-pen-to-square"></i>
                </div>
                <h2>Chỉnh sửa Loại Sách</h2>
                <p>Đang chỉnh sửa: <span class="current-name">@Model.TENNXB</span></p>
            </div>

            <!-- Body -->
            <div class="edit-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <!-- Form input -->
                <div class="custom-form-group">
                    <label class="custom-label">
                        <i class="fa-solid fa-edit"></i>
                        Tên nhà xuất bản
                        <span class="required-star">*</span>
                    </label>
                    @Html.TextBoxFor(model => model.TENNXB, new
                    {
                        @class = "custom-input",
                        placeholder = "Nhập tên loại sách mới...",
                        required = "required",
                        maxlength = "100",
                        id = "tenLoaiInput"
                    })
                </div>
                <div class="custom-form-group">
                    <label class="custom-label">
                        <i class="fa-solid fa-tag"></i>
                        Địa chỉ
                        <span class="required-star">*</span>
                    </label>
                    <select class="css_select form-control" id="tinh" name="DIACHI" title="Chọn Tỉnh Thành" style="width:180px">
                        <option value="" class="form-control">Chọn Tỉnh Thành</option>
                    </select>
                </div>


                <!-- Change indicator -->
                <div class="change-indicator" id="changeIndicator" style="display: none;">
                    <i class="fa-solid fa-arrow-right-arrow-left"></i>
                    <span>Tên sẽ được đổi thành: <strong id="newNamePreview"></strong></span>
                </div>

                <!-- Buttons -->
                <div class="edit-footer">
                    <a href="@Url.Action("Index", "NhaXuatBan", new { area = "Admin" })" class="btn-cancel">
                        <i class="fa-solid fa-xmark"></i>
                        Hủy bỏ
                    </a>
                    <button type="submit" class="btn-save">
                        <i class="fa-solid fa-check"></i>
                        Lưu thay đổi
                    </button>
                </div>
            </div>
        </div>
    }
</section>

<script>
    // Hiển thị preview khi thay đổi tên
    document.addEventListener('DOMContentLoaded', function() {
        const input = document.getElementById('tenLoaiInput');
        const indicator = document.getElementById('changeIndicator');
        const preview = document.getElementById('newNamePreview');
        const originalName = '@Model.TENNXB';

        input.addEventListener('input', function() {
            const newValue = this.value.trim();

            if (newValue && newValue !== originalName) {
                indicator.style.display = 'flex';
                preview.textContent = newValue;
            } else {
                indicator.style.display = 'none';
            }
        });
    });

    $(document).ready(function () {
        //Lấy tỉnh thành
        $.getJSON('https://esgoo.net/api-tinhthanh/1/0.htm', function (data_tinh) {
            if (data_tinh.error == 0) {
                $.each(data_tinh.data, function (key_tinh, val_tinh) {
                    $("#tinh").append('<option value="' + val_tinh.full_name + '">' + val_tinh.full_name + '</option>');

                });
                $("#tinh").change(function (e) {
                    var idtinh = $(this).val();
                    //Lấy quận huyện
                    $.getJSON('https://esgoo.net/api-tinhthanh/2/' + idtinh + '.htm', function (data_quan) {
                        if (data_quan.error == 0) {
                            $("#quan").html('<option value="0">Quận Huyện</option>');
                            $("#phuong").html('<option value="0">Phường Xã</option>');
                            $.each(data_quan.data, function (key_quan, val_quan) {
                                $("#quan").append('<option value="' + val_quan.id + '">' + val_quan.full_name + '</option>');
                            });
                            //Lấy phường xã
                            $("#quan").change(function (e) {
                                var idquan = $(this).val();
                                $.getJSON('https://esgoo.net/api-tinhthanh/3/' + idquan + '.htm', function (data_phuong) {
                                    if (data_phuong.error == 0) {
                                        $("#phuong").html('<option value="0">Phường Xã</option>');
                                        $.each(data_phuong.data, function (key_phuong, val_phuong) {
                                            $("#phuong").append('<option value="' + val_phuong.id + '">' + val_phuong.full_name + '</option>');
                                        });
                                    }
                                });
                            });

                        }
                    });
                });

            }
        });
    });
</script>