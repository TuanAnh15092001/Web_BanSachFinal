@model Web_BanSach.NHAXUATBAN

@{
    ViewBag.Title = "ViewEdit";
}


@using (Html.BeginForm("EditSubmit", "NhaXuatBan", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal mauchu">
        <h5> Sửa nhà xuất bản</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group padding">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.MANXB)
            </div>
        </div>

        <div class="form-group padding">
            Tên NXB
            <div class="col-md-10">
                @Html.EditorFor(model => model.TENNXB, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENNXB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group padding">
            Địa chỉ
            <div class="col-md-10">
                @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group padding">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn-save" />
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
}

<style>

    .btn-save {
        display: inline-block;
        background-color: #4ade80; /* xanh lá nhạt */
        color: #0f172a;
        padding: 10px 18px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.25s;
        margin-bottom: 15px;
        margin-top: 15px;
        margin-right: 15px;
    }

        .btn-save:hover {
            background-color: #16a34a; /* xanh lá đậu */
            color: white;
        }

    .mauchu {
        color: white;
    }

    .padding {
        padding: 4px 4px 4px 4px;
    }
</style>