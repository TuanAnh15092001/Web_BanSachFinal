@model Web_BanSach.NHAXUATBAN

@{
    ViewBag.Title = "ViewDelete";
}

    @using (Html.BeginForm("DeleteSubmit", "NhaXuatBan")) 
    {
        @Html.AntiForgeryToken()
<div>
<h5 style="color:red">Bạn có muốn xoá @Model.TENNXB này không?</h5>
    <hr />
    <dl class="dl-horizontal mauchu">
        <dd>
            @*@Html.DisplayFor(model => model.MANXB)*@
            @Html.HiddenFor(model => model.MANXB)
        </dd>

        <dt>
            Tên NXB
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TENNXB)
        </dd>

        <dt>
            Địa chỉ
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DIACHI)
        </dd>
    </dl>
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn-save" />
            @Html.ActionLink("Back to List", "Index")
        </div>
</div>
    }

<style>

    .btn-save {
        display: inline-block;
        background-color: #4ade80; /* xanh lá nhạt */
        color: #0f172a;
        padding: 10px 18px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.25s;
        margin-bottom: 15px;
        margin-top: 15px;
        margin-right: 15px;
    }

        .btn-save:hover {
            background-color: #16a34a; /* xanh lá đậu */
            color: white;
        }

    .mauchu {
        color: white;
    }

    .padding {
        padding: 4px 4px 4px 4px;
    }
</style>