@model IEnumerable<Web_BanSach.NHAXUATBAN>

@{
    ViewBag.Title = "Quản lý Nhà Xuất Bản";
    <link href="~/Areas/Css/IndexNXB.css" rel="stylesheet" />
}
<section class="admin-container">
    <!-- Header -->
    <div class="page-header">
        <h1 class="page-title">
            <i class="fa-solid fa-building"></i>
            Quản lý Nhà Xuất Bản
        </h1>

        <a href="@Url.Action("ThemNXB", "NhaXuatBan", new { area = "Admin" })" class="btn-add">
            <i class="fa-solid fa-plus"></i>
            Thêm NXB Mới
        </a>
    </div>

    <!-- Stats Row -->
    <div class="stats-row">
        <div class="stat-card">
            <div class="stat-icon purple">
                <i class="fa-solid fa-building"></i>
            </div>
            <div class="stat-content">
                <div class="stat-label">Tổng số NXB</div>
                <div class="stat-value">@Model.Count()</div>
            </div>
        </div>
    </div>

    <!-- Table Card -->
    <div class="table-card">
        <!-- Table Header -->
        <div class="table-header">
            <h3 class="table-title">
                <i class="fa-solid fa-list"></i>
                Danh sách Nhà Xuất Bản
            </h3>
        </div>

        @if (Model.Any())
        {
            <table class="custom-table" id="nxbTable">
                <thead>
                    <tr>
                        <th style="width: 80px;">
                            <i class="fa-solid fa-hashtag" style="margin-right: 6px;"></i>Mã
                        </th>
                        <th>
                            <i class="fa-solid fa-building" style="margin-right: 6px;"></i>Tên NXB
                        </th>
                        <th>
                            <i class="fa-solid fa-location-dot" style="margin-right: 6px;"></i>Địa chỉ
                        </th>
                        <th style="width: 120px; text-align: center;">
                            <i class="fa-solid fa-gear" style="margin-right: 6px;"></i>Thao tác
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="nxb-id">@item.MANXB</span>
                            </td>
                            <td>
                                <div class="nxb-name">
                                    <div class="nxb-avatar">
                                        <i class="fa-solid fa-building"></i>
                                    </div>
                                    <div class="nxb-info">
                                        <div class="nxb-title">@item.TENNXB</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="address-cell">
                                    <div class="address-icon">
                                        <i class="fa-solid fa-map-marker-alt"></i>
                                    </div>
                                    <span class="address-text">@item.DIACHI</span>
                                </div>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <a href="@Url.Action("ViewEdit", new { nxb_id = item.MANXB })"
                                       class="btn-action btn-edit"
                                       title="Chỉnh sửa">
                                        <i class="fa-solid fa-pen-to-square"></i>
                                    </a>
                                    <button type="button"
                                            class="btn-action btn-delete"
                                            title="Xóa"
                                            onclick="showDeleteModal('@item.MANXB', '@item.TENNXB', '@item.DIACHI')">
                                        <i class="fa-solid fa-trash-can"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <i class="fa-solid fa-building-circle-xmark"></i>
                <p>Chưa có nhà xuất bản nào. Hãy thêm NXB mới!</p>
            </div>
        }
    </div>
</section>

<!-- ==================== DELETE CONFIRMATION MODAL ==================== -->
<div class="modal-overlay" id="deleteModal">
    <div class="modal-box">
        <div class="modal-header">
            <div class="modal-icon">
                <i class="fa-solid fa-trash-can"></i>
            </div>
            <h3>Xác nhận xóa NXB</h3>
        </div>
        <div class="modal-body">
            <p>Bạn có chắc chắn muốn xóa nhà xuất bản này?</p>
            <div class="modal-item-info">
                <div class="modal-item-name">
                    <i class="fa-solid fa-building"></i>
                    <span id="deleteItemName"></span>
                </div>
                <div class="modal-item-address">
                    <i class="fa-solid fa-location-dot"></i>
                    <span id="deleteItemAddress"></span>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="modal-btn modal-btn-cancel" onclick="hideDeleteModal()">
                <i class="fa-solid fa-xmark"></i>
                Hủy bỏ
            </button>
            <a href="#" class="modal-btn modal-btn-confirm" id="confirmDeleteBtn">
                <i class="fa-solid fa-trash-can"></i>
                Xóa NXB
            </a>
        </div>
    </div>
</div>

<script>
    // Hiển thị modal xóa
    function showDeleteModal(id, name, address) {
        const modal = document.getElementById('deleteModal');
        const itemName = document.getElementById('deleteItemName');
        const itemAddress = document.getElementById('deleteItemAddress');
        const confirmBtn = document.getElementById('confirmDeleteBtn');

        itemName.textContent = name;
        itemAddress.textContent = address || 'Chưa có địa chỉ';
        confirmBtn.href = '@Url.Action("ViewDelete", "NhaXuatBan", new { area = "Admin" })' + '?nxb_id=' + id;

        modal.classList.add('active');
        document.body.style.overflow = 'hidden';
    }

    // Ẩn modal xóa
    function hideDeleteModal() {
        const modal = document.getElementById('deleteModal');
        modal.classList.remove('active');
        document.body.style.overflow = 'auto';
    }

    // Đóng modal khi click bên ngoài
    document.getElementById('deleteModal').addEventListener('click', function(e) {
        if (e.target === this) {
            hideDeleteModal();
        }
    });

    // Đóng modal khi nhấn ESC
    document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            hideDeleteModal();
        }
    });

</script>