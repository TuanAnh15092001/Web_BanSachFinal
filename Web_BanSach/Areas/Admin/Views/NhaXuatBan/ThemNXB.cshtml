@model Web_BanSach.NHAXUATBAN

@{
    ViewBag.Title = "ThemNXB";
}
<script src="https://esgoo.net/scripts/jquery.js"></script>

@using (Html.BeginForm("ViewThemNXB", "NhaXuatBan", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal mauchu padding">
        <h4>Thêm nhà xuất bản</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group padding">
            Tên nhà xuất bản
            <div class="col-md-10">
                @Html.EditorFor(model => model.TENNXB, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENNXB, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group padding">
            Địa chỉ
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })*@
                <select class="css_select form-control" id="tinh" name="DIACHI" title="Chọn Tỉnh Thành" style="width:180px">
                    <option value="" class="form-control">Chọn Tỉnh Thành</option>
                </select>
            </div>
        </div>

        <div class="form-group padding">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn-save" />
                @Html.ActionLink("Back", "Index")

            </div>
        </div>
    </div>
}

<style>

    .btn-save {
        display: inline-block;
        background-color: #4ade80; /* xanh lá nhạt */
        color: #0f172a;
        padding: 10px 18px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.25s;
        margin-bottom: 15px;
        margin-top: 15px;
        margin-right: 15px;
    }

        .btn-save:hover {
            background-color: #16a34a; /* xanh lá đậu */
            color: white;
        }

    .mauchu {
        color: white;
    }

    .padding {
        padding: 4px 4px 4px 4px;
    }
</style>


<script>
    $(document).ready(function () {
        //Lấy tỉnh thành
        $.getJSON('https://esgoo.net/api-tinhthanh/1/0.htm', function (data_tinh) {
            if (data_tinh.error == 0) {
                $.each(data_tinh.data, function (key_tinh, val_tinh) {
                    $("#tinh").append('<option value="' + val_tinh.full_name + '">' + val_tinh.full_name + '</option>');

                });
                $("#tinh").change(function (e) {
                    var idtinh = $(this).val();
                    //Lấy quận huyện
                    $.getJSON('https://esgoo.net/api-tinhthanh/2/' + idtinh + '.htm', function (data_quan) {
                        if (data_quan.error == 0) {
                            $("#quan").html('<option value="0">Quận Huyện</option>');
                            $("#phuong").html('<option value="0">Phường Xã</option>');
                            $.each(data_quan.data, function (key_quan, val_quan) {
                                $("#quan").append('<option value="' + val_quan.id + '">' + val_quan.full_name + '</option>');
                            });
                            //Lấy phường xã
                            $("#quan").change(function (e) {
                                var idquan = $(this).val();
                                $.getJSON('https://esgoo.net/api-tinhthanh/3/' + idquan + '.htm', function (data_phuong) {
                                    if (data_phuong.error == 0) {
                                        $("#phuong").html('<option value="0">Phường Xã</option>');
                                        $.each(data_phuong.data, function (key_phuong, val_phuong) {
                                            $("#phuong").append('<option value="' + val_phuong.id + '">' + val_phuong.full_name + '</option>');
                                        });
                                    }
                                });
                            });

                        }
                    });
                });

            }
        });
    });
</script>