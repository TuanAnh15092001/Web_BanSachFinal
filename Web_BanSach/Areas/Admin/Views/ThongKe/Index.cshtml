@model IEnumerable<Web_BanSach.HOADON>

@{
    ViewBag.Title = "Thống kê hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage1.cshtml";
}

<style>
    /* Container chính */
    .stats-container {
        padding: 30px;
        background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
        min-height: 100vh;
    }

    /* Header section */
    .stats-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
        flex-wrap: wrap;
        gap: 20px;
    }

    .stats-title {
        color: #fff;
        font-size: 28px;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 12px;
    }

        .stats-title i {
            color: #10b981;
            font-size: 32px;
        }

    .stats-subtitle {
        color: #94a3b8;
        font-size: 14px;
        margin-top: 5px;
    }

    /* Cards thống kê tổng quan */
    .stats-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .stat-card {
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
        border-radius: 16px;
        padding: 24px;
        border: 1px solid #334155;
        transition: all 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 40px rgba(16, 185, 129, 0.2);
            border-color: #10b981;
        }

        .stat-card .icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 15px;
        }

            .stat-card .icon i {
                font-size: 24px;
                color: #fff;
            }

        .stat-card.orders .icon {
            background: linear-gradient(135deg, #3b82f6, #1d4ed8);
        }

        .stat-card.revenue .icon {
            background: linear-gradient(135deg, #10b981, #059669);
        }

        .stat-card.customers .icon {
            background: linear-gradient(135deg, #f59e0b, #d97706);
        }

        .stat-card.avg .icon {
            background: linear-gradient(135deg, #8b5cf6, #7c3aed);
        }

        .stat-card .label {
            color: #94a3b8;
            font-size: 14px;
            margin-bottom: 8px;
        }

        .stat-card .value {
            color: #fff;
            font-size: 28px;
            font-weight: 700;
        }

        .stat-card .change {
            display: inline-flex;
            align-items: center;
            gap: 4px;
            font-size: 13px;
            margin-top: 10px;
            padding: 4px 8px;
            border-radius: 6px;
        }

            .stat-card .change.up {
                background: rgba(16, 185, 129, 0.2);
                color: #10b981;
            }

            .stat-card .change.down {
                background: rgba(239, 68, 68, 0.2);
                color: #ef4444;
            }

    /* Table section */
    .table-container {
        background: #1e293b;
        border-radius: 16px;
        border: 1px solid #334155;
        overflow: hidden;
    }

    .table-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 24px;
        border-bottom: 1px solid #334155;
        flex-wrap: wrap;
        gap: 15px;
    }

    .table-title {
        color: #fff;
        font-size: 18px;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .table-title i {
            color: #10b981;
        }

    .table-actions {
        display: flex;
        gap: 12px;
        flex-wrap: wrap;
    }

    .search-box {
        position: relative;
    }

        .search-box input {
            background: #0f172a;
            border: 1px solid #334155;
            border-radius: 8px;
            padding: 10px 16px 10px 40px;
            color: #fff;
            font-size: 14px;
            width: 250px;
            transition: all 0.3s ease;
        }

            .search-box input:focus {
                outline: none;
                border-color: #10b981;
                box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
            }

            .search-box input::placeholder {
                color: #64748b;
            }

        .search-box i {
            position: absolute;
            left: 14px;
            top: 50%;
            transform: translateY(-50%);
            color: #64748b;
        }

    .btn-export {
        background: linear-gradient(135deg, #10b981, #059669);
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

        .btn-export:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(16, 185, 129, 0.4);
        }

    .btn-filter {
        background: #334155;
        color: #fff;
        border: 1px solid #475569;
        padding: 10px 20px;
        border-radius: 8px;
        font-size: 14px;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

        .btn-filter:hover {
            background: #475569;
        }

    /* Table styles */
    .stats-table {
        width: 100%;
        border-collapse: collapse;
    }

        .stats-table thead th {
            background: #0f172a;
            color: #94a3b8;
            font-weight: 600;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            padding: 16px 20px;
            text-align: left;
            border-bottom: 1px solid #334155;
        }

        .stats-table tbody tr {
            transition: all 0.3s ease;
        }

            .stats-table tbody tr:hover {
                background: rgba(16, 185, 129, 0.05);
            }

        .stats-table tbody td {
            padding: 16px 20px;
            color: #e2e8f0;
            font-size: 14px;
            border-bottom: 1px solid #334155;
        }

        .stats-table tbody tr:last-child td {
            border-bottom: none;
        }

    /* Order ID badge */
    .order-id {
        background: linear-gradient(135deg, #3b82f6, #1d4ed8);
        color: #fff;
        padding: 6px 12px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 13px;
        display: inline-block;
    }

    /* Customer info */
    .customer-info {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .customer-avatar {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        background: linear-gradient(135deg, #10b981, #059669);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #fff;
        font-weight: 600;
        font-size: 14px;
    }

    .customer-name {
        color: #fff;
        font-weight: 500;
    }

    .customer-id {
        color: #64748b;
        font-size: 12px;
    }

    /* Date badge */
    .date-badge {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #94a3b8;
    }

        .date-badge i {
            color: #f59e0b;
        }

    /* Amount */
    .amount {
        color: #10b981;
        font-weight: 700;
        font-size: 15px;
    }

    /* Address */
    .address {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #94a3b8;
        max-width: 200px;
    }

        .address i {
            color: #ef4444;
            flex-shrink: 0;
        }

        .address span {
            overflow: hidden;
            text-overflow: ellipsis;
            white-space: nowrap;
        }

    /* Action buttons */
    .action-buttons {
        display: flex;
        gap: 8px;
    }

    .btn-action {
        width: 36px;
        height: 36px;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

    .btn-view {
        background: rgba(59, 130, 246, 0.2);
        color: #3b82f6;
    }

        .btn-view:hover {
            background: #3b82f6;
            color: #fff;
        }

    .btn-edit {
        background: rgba(245, 158, 11, 0.2);
        color: #f59e0b;
    }

        .btn-edit:hover {
            background: #f59e0b;
            color: #fff;
        }

    .btn-delete {
        background: rgba(239, 68, 68, 0.2);
        color: #ef4444;
    }

        .btn-delete:hover {
            background: #ef4444;
            color: #fff;
        }

    /* Pagination */
    .table-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 24px;
        border-top: 1px solid #334155;
        flex-wrap: wrap;
        gap: 15px;
    }

    .showing-info {
        color: #64748b;
        font-size: 14px;
    }

    .pagination {
        display: flex;
        gap: 8px;
    }

    .page-btn {
        width: 36px;
        height: 36px;
        border-radius: 8px;
        border: 1px solid #334155;
        background: transparent;
        color: #94a3b8;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

        .page-btn:hover, .page-btn.active {
            background: #10b981;
            border-color: #10b981;
            color: #fff;
        }

    /* Empty state */
    .empty-state {
        text-align: center;
        padding: 60px 20px;
        color: #64748b;
    }

        .empty-state i {
            font-size: 60px;
            color: #334155;
            margin-bottom: 20px;
        }

        .empty-state h3 {
            color: #fff;
            margin-bottom: 10px;
        }

    /* Responsive */
    @@media (max-width: 768px) {
        .stats-container {
            padding: 15px;
        }

        .stats-table {
            display: block;
            overflow-x: auto;
        }

        .search-box input {
            width: 100%;
        }

        .table-actions {
            width: 100%;
        }
    }
</style>

<div class="stats-container">
    <!-- Header -->
    <div class="stats-header">
        <div>
            <h1 class="stats-title">
                <i class="fas fa-chart-line"></i>
                Thống Kê Hóa Đơn
            </h1>
            <p class="stats-subtitle">Quản lý và theo dõi tất cả đơn hàng của cửa hàng</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="stats-cards">
        <div class="stat-card orders">
            <div class="icon">
                <i class="fas fa-shopping-cart"></i>
            </div>
            <div class="label">Tổng đơn hàng</div>
            <div class="value">@Model.Count()</div>
            <div class="change up">
                <i class="fas fa-arrow-up"></i> 12% so với tháng trước
            </div>
        </div>

        <div class="stat-card revenue">
            <div class="icon">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <div class="label">Tổng doanh thu</div>
            <div class="value">@String.Format("{0:#,##0}đ", Model.Sum(x => x.TONGTIEN ?? 0))</div>
            <div class="change up">
                <i class="fas fa-arrow-up"></i> 8% so với tháng trước
            </div>
        </div>

        <div class="stat-card customers">
            <div class="icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="label">Khách hàng</div>
            <div class="value">@Model.Select(x => x.MAKHACHHANG).Distinct().Count()</div>
            <div class="change up">
                <i class="fas fa-arrow-up"></i> 5% so với tháng trước
            </div>
        </div>

        <div class="stat-card avg">
            <div class="icon">
                <i class="fas fa-receipt"></i>
            </div>
            <div class="label">Trung bình/đơn</div>
            @{
                var avgOrder = Model.Any() ? Model.Average(x => x.TONGTIEN ?? 0) : 0;
            }
            <div class="value">@String.Format("{0:#,##0}đ", avgOrder)</div>
            <div class="change down">
                <i class="fas fa-arrow-down"></i> 2% so với tháng trước
            </div>
        </div>
    </div>

    <!-- Table -->
    <div class="table-container">
        <div class="table-header">
            <div class="table-title">
                <i class="fas fa-list"></i>
                Danh sách hóa đơn
            </div>
            <div class="table-actions">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Tìm kiếm hóa đơn..." id="searchInput">
                </div>
                <button class="btn-filter">
                    <i class="fas fa-filter"></i> Lọc
                </button>
                <button class="btn-export">
                    <i class="fas fa-download"></i> Xuất Excel
                </button>
            </div>
        </div>

        @if (Model.Any())
        {
            <table class="stats-table">
                <thead>
                    <tr>
                        <th>Mã hóa đơn</th>
                        <th>Khách hàng</th>
                        <th>Ngày lập</th>
                        <th>Tổng tiền</th>
                        <th>Địa chỉ</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <span class="order-id">#@item.MAHOADON</span>
                            </td>
                            <td>
                                <div class="customer-info">
                                    <div class="customer-avatar">
                                        @(item.MAKHACHHANG.HasValue ? item.MAKHACHHANG.Value.ToString().Substring(0, 1) : "?")
                                    </div>
                                    <div>
                                        <div class="customer-name">Khách hàng</div>
                                        <div class="customer-id">ID: @item.MAKHACHHANG</div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="date-badge">
                                    <i class="fas fa-calendar-alt"></i>
                                    @String.Format("{0:dd/MM/yyyy}", item.NGAYLAP)
                                </div>
                            </td>
                            <td>
                                <span class="amount">@String.Format("{0:#,##0}đ", item.TONGTIEN)</span>
                            </td>
                            <td>
                                <div class="address" title="@item.DIACHI">
                                    <i class="fas fa-map-marker-alt"></i>
                                    <span>@item.DIACHI</span>
                                </div>
                            </td>
                            <td>
                                <div class="action-buttons">
                                    <button class="btn-action btn-view" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn-action btn-edit" title="Chỉnh sửa">
                                        <i class="fas fa-edit"></i>
                                    </button>
                                    <button class="btn-action btn-delete" title="Xóa">
                                        <i class="fas fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="table-footer">
                <div class="showing-info">
                    Hiển thị <strong>1-@Model.Count()</strong> trong tổng số <strong>@Model.Count()</strong> hóa đơn
                </div>
                <div class="pagination">
                    <button class="page-btn"><i class="fas fa-chevron-left"></i></button>
                    <button class="page-btn active">1</button>
                    <button class="page-btn">2</button>
                    <button class="page-btn">3</button>
                    <button class="page-btn"><i class="fas fa-chevron-right"></i></button>
                </div>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-inbox"></i>
                <h3>Chưa có hóa đơn nào</h3>
                <p>Các hóa đơn sẽ xuất hiện ở đây khi có khách hàng đặt hàng</p>
            </div>
        }
    </div>
</div>

<script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('keyup', function() {
        var searchValue = this.value.toLowerCase();
        var rows = document.querySelectorAll('.stats-table tbody tr');

        rows.forEach(function(row) {
            var text = row.textContent.toLowerCase();
            row.style.display = text.includes(searchValue) ? '' : 'none';
        });
    });
</script>