@model IEnumerable<Web_BanSach.LOAISACH>

@{
    ViewBag.Title = "Edit Loại";
}
<style>
    table {
        background-color: #0f172a !important;
        color: white !important;
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        background-color: #0f172a !important;
        color: #38bdf8 !important;
        border-bottom: 1px solid #334155;
        border-color: #334155 !important;
        padding: 8px;
    }

    th {
        background-color: #0f172a !important;
        color: red !important;
        font-weight: 600;
    }

    /* Button thêm sách */
    .btn-add {
        display: inline-block;
        background-color: #4ade80; /* xanh lá nhạt */
        color: #0f172a;
        padding: 5px 10px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.25s;
        margin-bottom: 15px;
    }

        .btn-add:hover {
            background-color: #16a34a; /* xanh lá đậu */
            color: white;
        }

    img {
        border-radius: 6px;
        object-fit: cover;
    }
    .fa-pen-to-square {
        color: #38bdf8;
    }

    .fa-trash {
        color: red;
    }

        .fa-pen-to-square:hover, .fa-trash:hover {
            opacity: 0.7;
        }
</style>
<section style="width:100%">
    <div class="btn-add">
@Html.ActionLink("Thêm Loại", "ThemLoai", new { area = "Admin" })
    </div>
    
<table class="table">
    <tr>
        <th>
            Mã loại
        </th>
        <th>
            Tên Loại
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MALOAI)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TENLOAI)
        </td>
        <td>
            @*@Html.ActionLink("Chỉnh sửa", "ViewEdit", new { Loaisach_id = item.MALOAI }) |
        @Html.ActionLink("Xoá", "ViewDelete", new { Loaisach_id = item.MALOAI })*@
            <a href="@Url.Action("ViewEdit", new { Loaisach_id = item.MALOAI })" title="Sửa">
                <i class="fa-solid fa-pen-to-square"></i>
            </a>
            |
            <a href="@Url.Action("ViewDelete", new { Loaisach_id = item.MALOAI })" title="Xóa" onclick="return confirm('Bạn có chắc muốn xóa?');">
                <i class="fa-solid fa-trash"></i>
            </a>
        </td>
    </tr>
}

</table>
</section>
