@model Web_BanSach.LOAISACH

@{
    ViewBag.Title = "ViewDelete";
}
    @using (Html.BeginForm("DeleteSubmit", "LoaiSach"))
    {
        @Html.AntiForgeryToken()
<div>
<h5 style="color:red">Bạn có muốn xoá loại @Model.TENLOAI này không?</h5>
    <hr />
    <dl class="dl-horizontal mauchu">
        <dd>
            @Html.HiddenFor(model => model.MALOAI)
            @*@Html.DisplayFor(model => model.MALOAI)*@
        </dd>

        <dt>
            Tên Loại
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TENLOAI)
        </dd>

    </dl>
        <div class="form-actions mauchu">
            <input type="submit" value="Delete" class="btn-save" />
            @Html.ActionLink("Back to List", "Index", new { area = "Admin" })
        </div>
</div>
    }
<style>
    .btn-save {
        display: inline-block;
        background-color: #4ade80; /* xanh lá nhạt */
        color: #0f172a;
        padding: 10px 18px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: bold;
        transition: 0.25s;
        margin-bottom: 15px;
        margin-top: 15px;
        margin-right: 15px;
    }

        .btn-save:hover {
            background-color: #16a34a; /* xanh lá đậu */
            color: white;
        }

    .mauchu {
        color: white;
    }

    .padding {
        padding: 4px 4px 4px 4px;
    }
</style>