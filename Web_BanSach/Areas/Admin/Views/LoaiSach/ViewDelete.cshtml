@model Web_BanSach.LOAISACH

@{
    ViewBag.Title = "Xóa Loại Sách";
    <link href="~/Areas/Css/XoaLoai.css" rel="stylesheet" />
}

<section class="delete-container">
    @using (Html.BeginForm("DeleteSubmit", "LoaiSach", new { area = "Admin" }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.MALOAI)

        <div class="delete-card">
            <!-- Header -->
            <div class="delete-header">
                <div class="delete-icon">
                    <i class="fa-solid fa-trash-can"></i>
                </div>
            </div>

            <!-- Body -->
            <div class="delete-body">
                <div class="category-info">
                    <div class="category-label">Loại sách sẽ bị xóa</div>

                    <h3 class="category-name">
                        <i class="fa-solid fa-tag"></i>
                        @Model.TENLOAI
                    </h3>

                    <div class="id-badge">
                        <i class="fa-solid fa-hashtag"></i>
                        Mã loại: @Model.MALOAI
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="delete-footer">
                <a href="@Url.Action("Index", "LoaiSach", new { area = "Admin" })" class="btn-back">
                    <i class="fa-solid fa-arrow-left"></i>
                    Hủy bỏ
                </a>
                <button type="submit" class="btn-delete">
                    <i class="fa-solid fa-trash-can"></i>
                    Xóa 
                </button>
            </div>
        </div>
    }
</section>