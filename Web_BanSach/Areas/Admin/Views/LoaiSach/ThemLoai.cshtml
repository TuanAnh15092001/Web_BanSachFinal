@model Web_BanSach.LOAISACH

@{
    ViewBag.Title = "Thêm Loại Sách";
    <link href="~/Areas/Css/ThemLoai.css" rel="stylesheet" />
}

<section class="form-container">
    <div class="form-card">
        <!-- Header -->
        <div class="form-header">
            <div class="form-icon">
                <i class="fa-solid fa-folder-plus"></i>
            </div>
            <h2>Thêm Loại Sách Mới</h2>
        </div>

        <!-- Body -->
        <div class="form-body">
            @using (Html.BeginForm("ViewThemLoai", "LoaiSach", new { area = "Admin" }, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="custom-form-group">
                    <label class="custom-label">
                        <i class="fa-solid fa-tag"></i>
                        Tên loại sách
                        <span class="required-star">*</span>
                    </label>
                    @Html.TextBoxFor(model => model.TENLOAI, new
                    {
                        @class = "custom-input",
                        placeholder = "Nhập tên loại sách...",
                        required = "required",
                        maxlength = "100"
                    })
                    @Html.ValidationMessageFor(model => model.TENLOAI, "", new { @class = "field-validation-error" })
                </div>
                <!-- Buttons -->
                <div class="form-footer">
                    <a href="@Url.Action("Index", "LoaiSach", new { area = "Admin" })" class="btn-cancel">
                        <i class="fa-solid fa-arrow-left"></i>
                        Quay lại
                    </a>
                    <button type="submit" class="btn-submit">
                        <i class="fa-solid fa-plus"></i>
                        Thêm loại sách
                    </button>
                </div>
            }
        </div>
    </div>
</section>