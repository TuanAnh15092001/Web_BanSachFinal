@model Web_BanSach.BANGSACH

@{
    ViewBag.Title = "Xóa Sách";
    <link href="~/Areas/Css/XoaSach.css" rel="stylesheet" />
}



<section class="delete-container">
    <form method="post" action="@Url.Action("DeleteSubmit", "SachEdit", new { id = Model.MASACH })">
        @Html.AntiForgeryToken()

        <div class="delete-card">
            <!-- Header -->
            <div class="delete-header">
                <div class="header-left">
                    <div class="header-icon">
                        <i class="fa-solid fa-trash-can"></i>
                    </div>
                    <div class="header-content">
                        <h2>Xác nhận xóa sách</h2>
                        <p>Bạn đang chuẩn bị xóa: <span class="book-name-highlight">@Model.TENSACH</span></p>
                    </div>
                </div>
            </div>

            <!-- Body -->
            <div class="delete-body">
                <!-- Left - Ảnh sách -->
                <div class="delete-sidebar">
                    <div class="book-image-card">
                        <img src="~/Content/HinhAnh/@Model.ANHBIA" alt="@Model.TENSACH" class="book-image" />
                        <div>
                            <p class="image-label">Ảnh bìa</p>
                            <p class="image-name">@Model.ANHBIA</p>
                        </div>
                    </div>
                </div>

                <!-- Right - Thông tin -->
                <div class="delete-main">
                    <!-- Info Grid -->
                    <div class="info-grid">
                        <!-- Tên sách -->
                        <div class="info-card full-width">
                            <div class="info-header">
                                <div class="info-icon">
                                    <i class="fa-solid fa-book"></i>
                                </div>
                                <span class="info-label">Tên sách</span>
                            </div>
                            <div class="info-value">@Model.TENSACH</div>
                        </div>

                        <!-- Giá bán -->
                        <div class="info-card">
                            <div class="info-header">
                                <div class="info-icon price">
                                    <i class="fa-solid fa-money-bill-wave"></i>
                                </div>
                                <span class="info-label">Giá bán</span>
                            </div>
                            <div class="info-value price">@String.Format("{0:N0}", Model.GIABAN) VNĐ</div>
                        </div>

                        <!-- Năm xuất bản -->
                        <div class="info-card">
                            <div class="info-header">
                                <div class="info-icon year">
                                    <i class="fa-solid fa-calendar-alt"></i>
                                </div>
                                <span class="info-label">Năm xuất bản</span>
                            </div>
                            <div class="info-value">@Model.NAMXUATBAN</div>
                        </div>

                        <!-- Loại sách -->
                        <div class="info-card">
                            <div class="info-header">
                                <div class="info-icon category">
                                    <i class="fa-solid fa-bookmark"></i>
                                </div>
                                <span class="info-label">Mã loại sách</span>
                            </div>
                            <div class="info-value">@Model.MALOAI</div>
                        </div>

                        <!-- Nhà xuất bản -->
                        <div class="info-card">
                            <div class="info-header">
                                <div class="info-icon publisher">
                                    <i class="fa-solid fa-building"></i>
                                </div>
                                <span class="info-label">Mã nhà xuất bản</span>
                            </div>
                            <div class="info-value">@Model.MANXB</div>
                        </div>

                        <!-- Nội dung -->
                        @if (!string.IsNullOrEmpty(Model.NOIDUNG))
                        {
                            <div class="info-card full-width">
                                <div class="info-header">
                                    <div class="info-icon content">
                                        <i class="fa-solid fa-file-lines"></i>
                                    </div>
                                    <span class="info-label">Nội dung tóm tắt</span>
                                </div>
                                <div class="info-value content">@Model.NOIDUNG</div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="delete-footer">
                <a href="@Url.Action("Index")" class="btn-cancel">
                    <i class="fa-solid fa-arrow-left"></i>
                    Hủy bỏ
                </a>
                <button type="submit" class="btn-delete">
                    <i class="fa-solid fa-trash-can"></i>
                    Xác nhận xóa
                </button>
            </div>
        </div>
    </form>
</section>