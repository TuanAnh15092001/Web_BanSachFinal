@model List<Web_BanSach.Models.GioHang>
@{
    ViewBag.Title = "Đặt hàng";
    Layout = "~/Views/Shared/_LayoutSach.cshtml";
}

<style>
    .cart-container {
        max-width: 900px;
        margin: 40px auto;
        padding: 30px 40px;
        background: linear-gradient(145deg, #0f172a, #1e293b);
        color: white;
        min-height: 70vh;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
    }

    .cart-title {
        font-size: 28px;
        font-weight: bold;
        color: #4ade80;
        margin-bottom: 25px;
        padding-bottom: 15px;
        border-bottom: 2px solid #334155;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .cart-title i {
            font-size: 32px;
        }

    /* Customer Info Section */
    .customer-info {
        background-color: #1e293b;
        padding: 25px;
        border-radius: 12px;
        margin-bottom: 25px;
        border: 1px solid #334155;
    }

        .customer-info h4 {
            color: #38bdf8;
            margin-bottom: 20px;
            font-size: 18px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

    .info-row {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
    }

        .info-row:last-child {
            margin-bottom: 0;
        }

        .info-row label {
            width: 180px;
            font-weight: 600;
            color: #94a3b8;
            font-size: 14px;
        }

        .info-row .value {
            color: #f1f5f9;
            font-weight: 500;
            font-size: 15px;
        }

        .info-row input {
            flex: 1;
            max-width: 400px;
            padding: 12px 16px;
            border: 2px solid #475569;
            border-radius: 8px;
            font-size: 14px;
            background-color: #0f172a;
            color: white;
            transition: all 0.3s ease;
        }

            .info-row input:focus {
                border-color: #4ade80;
                outline: none;
                box-shadow: 0 0 0 3px rgba(74, 222, 128, 0.2);
            }

            .info-row input::placeholder {
                color: #64748b;
            }

    /* Cart Table */
    .cart-table-wrapper {
        background-color: #1e293b;
        border-radius: 12px;
        overflow: hidden;
        margin-bottom: 25px;
        border: 1px solid #334155;
    }

    .table-header {
        padding: 15px 20px;
        background-color: #0f172a;
        border-bottom: 1px solid #334155;
    }

        .table-header h4 {
            color: #38bdf8;
            margin: 0;
            font-size: 18px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

    .cart-table {
        width: 100%;
        border-collapse: collapse;
    }

        .cart-table th {
            text-align: left;
            padding: 15px 20px;
            background-color: #334155;
            color: #e2e8f0;
            font-size: 14px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

            .cart-table th:last-child {
                text-align: right;
            }

        .cart-table td {
            padding: 18px 20px;
            border-bottom: 1px solid #334155;
            vertical-align: middle;
            font-size: 15px;
        }

        .cart-table tr:last-child td {
            border-bottom: none;
        }

        .cart-table tr:hover {
            background-color: rgba(74, 222, 128, 0.05);
        }

    .book-name {
        color: #f1f5f9;
        font-weight: 500;
    }

    .quantity {
        color: #94a3b8;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        background-color: #0f172a;
        padding: 6px 14px;
        border-radius: 6px;
        font-weight: 600;
    }

    .price {
        color: #4ade80;
        font-weight: 600;
        text-align: right;
    }

    /* Total Section */
    .total-section {
        background: linear-gradient(135deg, #065f46, #047857);
        padding: 25px 30px;
        border-radius: 12px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        box-shadow: 0 4px 15px rgba(4, 120, 87, 0.3);
    }

    .total-label {
        font-size: 18px;
        color: #d1fae5;
    }

    .total-price {
        font-size: 28px;
        font-weight: bold;
        color: #ffffff;
    }

    /* Checkout Button */
    .checkout-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 15px;
    }

    .back-btn {
        padding: 14px 28px;
        background-color: transparent;
        color: #94a3b8;
        font-weight: 600;
        border-radius: 10px;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 2px solid #475569;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

        .back-btn:hover {
            background-color: #334155;
            color: white;
            border-color: #4ade80;
        }

    .checkout-btn {
        padding: 16px 40px;
        background: linear-gradient(135deg, #4ade80, #22c55e);
        color: #0f172a;
        font-weight: bold;
        font-size: 16px;
        border-radius: 10px;
        border: none;
        cursor: pointer;
        transition: all 0.3s ease;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 4px 15px rgba(74, 222, 128, 0.3);
    }

        .checkout-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 25px rgba(74, 222, 128, 0.4);
            background: linear-gradient(135deg, #22c55e, #16a34a);
        }

        .checkout-btn:active {
            transform: translateY(0);
        }

    /* Order Summary Badge */
    .order-badge {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background-color: #4ade80;
        color: #0f172a;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        margin-left: 10px;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .cart-container {
            margin: 20px;
            padding: 20px;
        }

        .info-row {
            flex-direction: column;
            align-items: flex-start;
        }

            .info-row label {
                margin-bottom: 8px;
            }

            .info-row input {
                max-width: 100%;
                width: 100%;
            }

        .total-section {
            flex-direction: column;
            text-align: center;
            gap: 10px;
        }

        .checkout-section {
            flex-direction: column;
        }

        .back-btn, .checkout-btn {
            width: 100%;
            justify-content: center;
        }
    }

    /* Animation */
    .fade-in {
        animation: fadeIn 0.5s ease-out;
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<div class="cart-container fade-in">
    <!-- Title -->
    <div class="cart-title">
        <i>🛒</i> Xác nhận đặt hàng
        <span class="order-badge">
            📦 @Model.Count sản phẩm
        </span>
    </div>

    <form method="post" action="/DatHang/DatHang">
        <!-- Customer Info -->
        <div class="customer-info">
            <h4><i>👤</i> Thông tin khách hàng</h4>

            <div class="info-row">
                <label>Tên khách hàng:</label>
                <span class="value">@Session["TEN"]</span>
            </div>

            <div class="info-row">
                <label for="diaChi">Địa chỉ giao hàng:</label>
                <input id="diaChi"
                       name="diaChi"
                       type="text"
                       placeholder="Nhập địa chỉ giao hàng của bạn..."
                       required />
            </div>
        </div>

        <!-- Cart Items Table -->
        <div class="cart-table-wrapper">
            <div class="table-header">
                <h4><i>📚</i> Chi tiết đơn hàng</h4>
            </div>
            <table class="cart-table">
                <thead>
                    <tr>
                        <th style="width: 50%;">Tên sách</th>
                        <th style="width: 20%;">Số lượng</th>
                        <th style="width: 30%; text-align: right;">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="book-name">📖 @item.TenSach</td>
                            <td><span class="quantity">×@item.SoLuong</span></td>
                            <td class="price">@String.Format("{0:#,##0}", item.ThanhTien) VNĐ</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Total -->
        <div class="total-section">
            <span class="total-label">💰 Tổng thanh toán:</span>
            <span class="total-price">@String.Format("{0:#,##0}", ViewBag.TongTien) VNĐ</span>
        </div>

        <!-- Buttons -->
        <div class="checkout-section">
            <a href="/Cart/Index" class="back-btn">
                ← Quay lại giỏ hàng
            </a>
            <button class="checkout-btn" type="submit">
                ✓ Xác nhận đặt hàng
            </button>
        </div>
    </form>
</div>