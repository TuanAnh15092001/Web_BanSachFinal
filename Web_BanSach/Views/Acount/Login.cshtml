@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutSach.cshtml";
}

<style>
    .login-card {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
        padding: 40px;
        width: 100%;
        max-width: 420px;
        margin: 40px auto;
        animation: slideUp 0.5s ease-out;
    }

    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .login-card .card-title {
        color: #0f172a;
        font-size: 28px;
        margin-bottom: 10px;
    }

    .login-card .subtitle {
        color: #64748b;
        font-size: 14px;
        margin-bottom: 30px;
    }

    .login-card .form-label {
        font-weight: 600;
        color: #334155;
        margin-bottom: 8px;
        display: block;
    }

    .login-card .form-control {
        border: 2px solid #e2e8f0;
        border-radius: 10px;
        padding: 12px 16px;
        padding-left: 45px;
        font-size: 15px;
        transition: all 0.3s ease;
        width: 100%;
    }

        .login-card .form-control:focus {
            border-color: #10b981;
            box-shadow: 0 0 0 4px rgba(16, 185, 129, 0.1);
            outline: none;
        }

    .login-card .btn-submit {
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        border: none;
        border-radius: 10px;
        padding: 14px;
        font-size: 16px;
        font-weight: 600;
        color: #fff;
        width: 100%;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
    }

        .login-card .btn-submit:hover {
            background: linear-gradient(135deg, #059669 0%, #047857 100%);
            transform: translateY(-2px);
            box-shadow: 0 5px 20px rgba(16, 185, 129, 0.4);
        }

    .login-card .divider {
        display: flex;
        align-items: center;
        margin: 25px 0;
        color: #94a3b8;
        font-size: 13px;
    }

        .login-card .divider::before,
        .login-card .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #e2e8f0;
        }

        .login-card .divider span {
            padding: 0 15px;
        }

    .login-card .link-text {
        text-align: center;
        color: #64748b;
        font-size: 14px;
    }

        .login-card .link-text a {
            color: #10b981;
            font-weight: 600;
            text-decoration: none;
            transition: color 0.3s;
        }

            .login-card .link-text a:hover {
                color: #059669;
                text-decoration: underline;
            }

    .login-card .input-group {
        position: relative;
        margin-bottom: 20px;
    }

    .login-card .input-icon {
        position: absolute;
        left: 16px;
        top: 50%;
        transform: translateY(-50%);
        color: #94a3b8;
        z-index: 10;
    }

    .login-card .logo-section {
        text-align: center;
        margin-bottom: 20px;
    }

        .login-card .logo-section i {
            font-size: 50px;
            color: #10b981;
        }

    .error-message {
        background: #fef2f2;
        border: 1px solid #fecaca;
        color: #dc2626;
        padding: 12px 16px;
        border-radius: 8px;
        margin-bottom: 20px;
        font-size: 14px;
    }

    .forgot-password {
        text-align: right;
        margin-bottom: 15px;
    }

        .forgot-password a {
            color: #64748b;
            font-size: 13px;
            text-decoration: none;
        }

            .forgot-password a:hover {
                color: #10b981;
            }
</style>

<div class="container">
    <div class="login-card">
        <!-- Logo -->
        <div class="logo-section">
            <i class="fas fa-book-open"></i>
        </div>

        <!-- Title -->
        <h3 class="card-title text-center fw-bold">Chào mừng trở lại!</h3>
        <p class="subtitle text-center">Đăng nhập vào tài khoản của bạn</p>

        <!-- Error Message -->
        @if (TempData["Error"] != null)
        {
            <div class="error-message">
                <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
            </div>
        }

        <!-- Form đăng nhập -->
        @using (Html.BeginForm("XuLyFormDN", "Acount", new { duongdan = ViewBag.Url }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <!-- Email -->
            <div class="mb-3">
                <label for="loginEmail" class="form-label">
                    <i class="fas fa-envelope me-2"></i>Email
                </label>
                <div class="input-group">
                    <span class="input-icon"><i class="fas fa-envelope"></i></span>
                    <input type="email"
                           name="email"
                           class="form-control"
                           id="loginEmail"
                           placeholder="Nhập email của bạn"
                           required>
                </div>
            </div>

            <!-- Password -->
            <div class="mb-3">
                <label for="loginPassword" class="form-label">
                    <i class="fas fa-lock me-2"></i>Mật khẩu
                </label>
                <div class="input-group">
                    <span class="input-icon"><i class="fas fa-lock"></i></span>
                    <input type="password"
                           name="password"
                           class="form-control"
                           id="loginPassword"
                           placeholder="Nhập mật khẩu"
                           required>
                </div>
            </div>

            <!-- Forgot Password -->
            <div class="forgot-password">
                <a href="#">Quên mật khẩu?</a>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn-submit">
                <i class="fas fa-sign-in-alt me-2"></i>ĐĂNG NHẬP
            </button>
        }

        <!-- Divider -->
        <div class="divider">
            <span>hoặc</span>
        </div>

        <!-- Register Link -->
        <p class="link-text">
            Chưa có tài khoản?
            <a href="@Url.Action("Register", "Acount")">
                <i class="fas fa-user-plus me-1"></i>Đăng ký ngay
            </a>
        </p>
    </div>
</div>