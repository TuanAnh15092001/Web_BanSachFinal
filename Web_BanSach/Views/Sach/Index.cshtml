@model List<BANGSACH>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutSach.cshtml";
}
    <style >
    .book-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        width: 100%;
        margin-bottom: 20px;
        padding-bottom: 8px;
        border-bottom: 1px solid #334155; /* đường kẻ nhẹ */
    }

    .book-header h2 {
        color: aquamarine;
        font-size: 26px;
        font-weight: 600;
        margin: 0;
    }

    .sort-box {
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .sort-box label {
            color: #cbd5e1;
            font-size: 14px;
        }

    .sort-select {
        padding: 8px 14px;
        background-color: #1e293b;
        color: #e2e8f0;
        border: 1px solid #475569;
        border-radius: 8px;
        font-size: 14px;
        cursor: pointer;
        transition: 0.2s;
    }

        .sort-select:hover {
            background-color: #334155;
        }

        .sort-select:focus {
            outline: none;
            border-color: aquamarine;
        }
</style>
<section class="book-section">
    <div class="book-header">
        <h2>Sách mới cập nhật</h2>

        <div class="sort-right">
            <form method="get" action="@Url.Action("Index", "Sach")">
                <select name="sort" onchange="this.form.submit()" class="sort-select">
                    <option value="">Sắp xếp</option>
                    <option value="gia_giam">Giá: Cao → Thấp</option>
                    <option value="gia_tang">Giá: Thấp → Cao</option>
                    <option value="a_z">Tên: A → Z</option>
                    <option value="z_a">Tên: Z → A</option>
                </select>
            </form>
        </div>
    </div>
    <div class="book-grid">

        @foreach (var item in Model)
        {

            <div class="book-card">
                <a href="@Url.Action("ChiTietSach", "Sach", new { masach = @item.MASACH })">
                    <div class="book-info">
                        <span class="book-tag">@item.LOAISACH.TENLOAI</span>
                    </div>
                    <img alt="@item.TENSACH" src="~/Content/HinhAnh/@item.ANHBIA">
                    <div class="book-info">
                        <div class="book-title">@item.TENSACH</div>
                        <div class="book-price">@String.Format("{0:#,##0}", @item.GIABAN) VNĐ</div>
                        <span class="book-author">@item.NHAXUATBAN.TENNXB</span>

                    </div>
                </a>
            </div>
        }
    </div>


    <div class="pagination">
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <a href="@Url.Action("Index", new { page = i })"
               class="@(i == ViewBag.Page ? "active-page" : "")">
                @i
            </a>
        }
    </div>
</section>



<style>
    .pagination {
        width: 100%; /* chiếm hết chiều ngang */
        display: flex;
        justify-content: center; /* căn giữa ngang */
        align-items: center; /* căn giữa dọc nếu cần */
        gap: 10px;
        margin: 20px 0;
    }

        .pagination a {
            color: white;
            padding: 8px 12px;
            border: 1px solid aquamarine;
            text-decoration: none;
            border-radius: 6px;
        }

            .pagination a.active-page {
                background-color: aquamarine;
                color: #0f172a;
                font-weight: bold;
            }
</style>



