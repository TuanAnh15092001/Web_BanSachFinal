            <style>

                .srch-icon {
                    position: relative; /* quan trọng để badge nằm trên icon */
                    background-color: none;
                    border: none;
                    cursor: pointer;
                    padding: 8px 12px;
                }

                    .srch-icon i {
                        color: white;
                        font-size: 20px;
                        transition: color 0.3s;
                    }

                    .srch-icon:hover i {
                        color: #41f8d7;
                    }

                /* badge số lượng */
                .cart-badge {
                    position: absolute;
                    top: -5px;
                    right: -5px;
                    background-color: red;
                    color: white;
                    font-size: 12px;
                    padding: 2px 6px;
                    border-radius: 50%;
                    font-weight: bold;
                }
            </style>
            <script>
                function ThemGio(masach) {
                    $.ajax({
                        url: '/Cart/ThemGioAjax',
                        type: 'GET',
                        data: { masach: masach },
                        success: function (res) {
                            if (res.success) {
                                $("#cart-count").text(res.count);
                            }
                        }
                    });
                }
            </script>

            @*mennu đăng nhập*@
            <div class="flex items-center justify-end lg\:flex-1 gap-1\.5 ">
